@model IEnumerable<IMStore.Entities.Products>

@{
    ViewData["Title"] = "Index";
}

<h1>Продукти</h1>

<p>
    <!--pass the id so that the create method can be able to set the corresponding category-->
    <a asp-action="Create" asp-route-categoryId="@ViewBag.catid" class="btn btn-outline-primary">Добави</a>
</p>
<table class="table table-striped table-bordered align-middle">
    <thead class="table-dark align-middle">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PictureURL)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Availability)
            </th>
            <th>Избери операция</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PictureURL)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Availability)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Редактирай</a>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Детайли</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Изтрий</a>
            </td>
        </tr>
}
    </tbody>
</table>
